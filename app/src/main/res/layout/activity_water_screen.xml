<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.lewisu.cs.nsoto.androidfinalproject.WaterScreenActivity"
    android:background="@drawable/water_screen">


    <Button
        android:id="@+id/fill_water_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/water_consumed"
        android:layout_centerHorizontal="true"
        android:text="@string/fill_water" />

    <!-- commenting out
    <TextView
        android:id="@+id/water_tap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/water_tap_text"
        android:textColor="@color/waterBlue"
        android:textSize="35sp" />
-->

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:indeterminate="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/progress_bar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/water_consumed"
        android:textColor="@color/waterBlue"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="@string/initial_water_amount"
        android:padding="10dp"/>
</RelativeLayout>
