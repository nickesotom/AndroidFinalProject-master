<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.lewisu.cs.nsoto.androidfinalproject.AddWaterScreenActivity"
    android:orientation="vertical"
    android:background="@drawable/fallingwater">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="250dp">
        <Button
            android:id="@+id/_8oz_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/_8_ozText" />
        <Button
            android:id="@+id/_12oz_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/_12_ozText" />

        <Button
            android:id="@+id/_16_9oz_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/_16_9_ozText" />

    </LinearLayout>

    <Button
        android:id="@+id/add_waterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_waterText"
        android:layout_marginTop="75dp"/>
    <Button
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:text="@string/ok_text"
        android:onClick="OnClickReturnToWaterScreen"/>

</LinearLayout>
